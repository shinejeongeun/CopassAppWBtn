<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="92dp"
        android:text="Orientation from magnetic field sensor and accelerometer"
        app:layout_constraintBottom_toBottomOf="@+id/txtAzimuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAzimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="177dp"
        android:text="Azimuth"
        app:layout_constraintStart_toStartOf="@+id/txtView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="102dp"
        android:text="Pitch"
        app:layout_constraintBottom_toBottomOf="@+id/txtRoll"
        app:layout_constraintStart_toStartOf="@+id/txtAzimuth"
        app:layout_constraintTop_toTopOf="@+id/txtAzimuth" />

    <TextView
        android:id="@+id/txtRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="332dp"
        android:text="Roll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtPitch" />

</androidx.constraintlayout.widget.ConstraintLayout>